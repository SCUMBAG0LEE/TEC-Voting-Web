    {
      "name": "Candidates",
      "item": [
        {
          "name": "Get All Candidates (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/candidates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates"]
            },
            "description": "Get all candidates without vote counts (public)"
          }
        },
        {
          "name": "Get Candidate by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/candidates/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "1"]
            },
            "description": "Get single candidate by ID (public)"
          }
        },
        {
          "name": "Get All Candidates (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates/admin/all",
