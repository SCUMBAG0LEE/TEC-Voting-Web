              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/history",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "history"]
            },
            "description": "Get all election history records"
          }
        },
        {
          "name": "Save to History",
          "request": {
            "method": "POST",
            "header": [
              {
