{
  "info": {
    "_postman_id": "tec-voting-api-collection",
    "name": "TEC Voting API",
    "description": "API collection for TEC Online Voting System\n\nBuilt with Bun + ElysiaJS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Get API info and status"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check server and database health"
          }
        }
      ]
    },
    {
      "name": "Voter",
      "item": [
        {
          "name": "Get Voting Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/voter/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "voter", "status"]
            },
            "description": "Get current voting status (public)"
          }
        },
        {
          "name": "Voter Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.token) {",
                  "    pm.environment.set('voterToken', jsonData.data.token);",
                  "    pm.environment.set('voterNim', jsonData.data.nim);",
                  "    console.log('Voter token saved');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nim\": \"{{voterNim}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/voter/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "voter", "login"]
            },
            "description": "Login as voter with NIM only (no password)"
          }
        },
        {
          "name": "Get Current Voter",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{voterToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/voter/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "voter", "me"]
            },
            "description": "Get current voter info (requires auth)"
          }
        },
        {
          "name": "Get Candidates for Voting",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{voterToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/voter/candidates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "voter", "candidates"]
            },
            "description": "Get candidates list for voting (requires auth, voting must be active)"
          }
        },
        {
          "name": "Cast Vote",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data && jsonData.data.token) {",
                  "    pm.environment.set('voterToken', jsonData.data.token);",
                  "    console.log('Updated voter token saved');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{voterToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidateId\": {{candidateId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/voter/vote",
              "host": ["{{baseUrl}}"],
              "path": ["api", "voter", "vote"]
            },
            "description": "Cast vote for a candidate"
          }
        },
        {
          "name": "Voter Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{voterToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/voter/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "voter", "logout"]
            },
            "description": "Logout voter (client should discard token)"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.token) {",
                  "    pm.environment.set('adminToken', jsonData.data.token);",
                  "    console.log('Admin token saved');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "login"]
            },
            "description": "Login as admin with email and password"
          }
        },
        {
          "name": "Get Admin Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "me"]
            },
            "description": "Get current admin info"
          }
        },
        {
          "name": "Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "dashboard"]
            },
            "description": "Get dashboard statistics"
          }
        },
        {
          "name": "Get Voters (Paginated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/voters?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voters"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                }
              ]
            },
            "description": "Get voters list with pagination and optional search"
          }
        },
        {
          "name": "Add Voter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nim\": \"123456789\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/voters",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voters"]
            },
            "description": "Add a single voter"
          }
        },
        {
          "name": "Add Voters (Bulk)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nims\": [\n    \"111111111\",\n    \"222222222\",\n    \"333333333\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/voters/bulk",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voters", "bulk"]
            },
            "description": "Add multiple voters at once"
          }
        },
        {
          "name": "Delete Voter",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/voters/123456789",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voters", "123456789"]
            },
            "description": "Delete a voter by NIM"
          }
        },
        {
          "name": "Get Voting Config",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/voting/config",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voting", "config"]
            },
            "description": "Get voting configuration"
          }
        },
        {
          "name": "Update Voting Schedule",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"voting_title\": \"TEC Election 2025\",\n  \"vot_start_date\": \"2025-12-22 08:00:00\",\n  \"vot_end_date\": \"2025-12-22 17:00:00\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/voting/schedule",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voting", "schedule"]
            },
            "description": "Update voting schedule and title"
          }
        },
        {
          "name": "Update Voting Title",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"voting_title\": \"TEC Election 2025\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/voting/title",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "voting", "title"]
            },
            "description": "Update voting title only"
          }
        },
        {
          "name": "Get Vote Tally",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/tally",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "tally"]
            },
            "description": "Get live vote tally"
          }
        },
        {
          "name": "Reset Voting System",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"saveHistory\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/reset",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "reset"]
            },
            "description": "Reset voting system (optionally save to history first)"
          }
        },
        {
          "name": "Reset Voters Only",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
