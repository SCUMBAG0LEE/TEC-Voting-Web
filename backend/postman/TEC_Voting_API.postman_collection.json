            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/reset/voters",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "reset", "voters"]
            },
            "description": "Reset only voter vote status"
          }
        },
        {
          "name": "Reset Votes Only",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/reset/votes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "reset", "votes"]
            },
            "description": "Reset only candidate vote counts"
          }
        },
